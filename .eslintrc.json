{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "@rocketseat/eslint-config/node"
  ],
  "rules": {
    "@typescript-eslint/no-floating-promises": [
      "warn"
    ],
    "no-empty-function": "off",
    "camelcase": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-empty-function": "off",
    "prettier/prettier": [
      "error",
      {
        "printWidth": 80,
        "tabWidth": 2,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "always",
        "semi": true
      }
    ]
  }
}
